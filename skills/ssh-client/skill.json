{
  "name": "ssh-client",
  "version": "1.0.0",
  "displayName": "SSH Client",
  "description": "Execute remote commands and manage files via SSH.",
  "category": "DevOps",
  "icon": "terminal",
  "author": "claw2agent",
  "layer": "L1",
  "requiresApiKey": true,
  "tags": [
    "ssh",
    "remote",
